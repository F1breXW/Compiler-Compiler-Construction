{
  "name": "简单命令式语言文法",
  "description": "支持变量声明、赋值、算术表达式的简单语言",
  "lexical_rules": [
    {"pattern": "int", "token": "int"},
    {"pattern": "[a-zA-Z_][a-zA-Z0-9_]*", "token": "id"},
    {"pattern": "[0-9]+", "token": "num"},
    {"pattern": ":=", "token": ":="},
    {"pattern": "\\+", "token": "+"},
    {"pattern": "-", "token": "-"},
    {"pattern": "\\*", "token": "*"},
    {"pattern": "/", "token": "/"},
    {"pattern": "\\(", "token": "("},
    {"pattern": "\\)", "token": ")"},
    {"pattern": "\\{", "token": "{"},
    {"pattern": "\\}", "token": "}"},
    {"pattern": ";", "token": ";"}
  ],
  "grammar_rules": [
    "P -> S P",
    "P -> S",
    "S -> int id ;",
    "S -> id := E ;",
    "S -> { P }",
    "S -> E ;",
    "E -> E + T",
    "E -> E - T",
    "E -> T",
    "T -> T * F",
    "T -> T / F",
    "T -> F",
    "F -> ( E )",
    "F -> id",
    "F -> num"
  ],
  "test_cases": [
    {
      "description": "变量声明和算术运算",
      "input": "int x ; x := 10 + 5 ;",
      "expected": "legal"
    }
  ]
}
